{
  "name": "tntfx",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "yarn workspace @tntfx/storybook run dev",
    "build": "yarn workspace @tntfx/storybook run build",
    "prepare": "husky install",
    "lint": "yarn lint:types && yarn lint:code && yarn lint:prettier && yarn lint:style",
    "lint:types": "tsc -p tsconfig.json --noEmit",
    "lint:code": "eslint . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier . --write",
    "lint:style": "stylelint \"**/*.scss\" --fix",
    "test": "jest",
    "gen": "ts-node cli/src/index.ts gen"
  },
  "workspaces": [
    "*"
  ],
  "dependencies": {},
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@microsoft/tsdoc": "^0.14.2",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.1",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "stylelint": "^15.11.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "packageManager": "yarn@1.22.19"
}
