{
  "$schema": "https://json.schemastore.org/tsconfig",

  "display": "nextjs",
  "extends": "./react.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "jsxImportSource": "react",
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": false
  },

  "include": ["src", "next-env.d.ts"],
  "exclude": ["node_modules"]
}
