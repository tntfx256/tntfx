{
  "$schema": "https://json.schemastore.org/tsconfig",

  "display": "nextjs",
  "extends": "./react.json",
  "compilerOptions": {
    "jsxImportSource": "react",
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": false
  }
}
